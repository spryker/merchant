<?xml version="1.0"?>
<transfers xmlns="spryker:transfer-01"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="Merchant">
        <property name="idMerchant" type="int" />
        <property name="merchantKey" type="string" />
        <property name="name" type="string" />
        <property name="registrationNumber" type="string" />
        <property name="status" type="string" />
        <property name="contactPersonTitle" type="string" />
        <property name="contactPersonFirstName" type="string" />
        <property name="contactPersonLastName" type="string" />
        <property name="contactPersonPhone" type="string" />
        <property name="email" type="string" />
        <property name="addressCollection" type="MerchantAddressCollection" />
    </transfer>

    <transfer name="MerchantCriteriaFilter">
        <property name="idMerchant" type="int" />
        <property name="email" type="string" />
        <property name="filter" type="Filter"/>
        <property name="pagination" type="Pagination"/>
    </transfer>

    <transfer name="Filter">
        <property name="limit" type="int"/>
        <property name="offset" type="int"/>
        <property name="orderBy" type="string"/>
        <property name="orderDirection" type="string"/>
    </transfer>

    <transfer name="Pagination">
        <property name="page" type="int"/>
        <property name="maxPerPage" type="int"/>
        <property name="nbResults" type="int"/>
        <property name="previousPage" type="int"/>
        <property name="nextPage" type="int"/>
        <property name="firstIndex" type="int"/>
        <property name="lastIndex" type="int"/>
        <property name="firstPage" type="int"/>
        <property name="lastPage" type="int"/>
    </transfer>

    <transfer name="MerchantResponse">
        <property name="merchant" type="Merchant" />
        <property name="isSuccess" type="bool"/>
        <property name="errors" type="MerchantError[]" singular="error" />
    </transfer>

    <transfer name="MerchantError">
        <property name="message" type="string" />
    </transfer>

    <transfer name="MerchantAddress">
        <property name="idMerchantAddress" type="int" />
        <property name="key" type="string" />
        <property name="fkCountry" type="int" />
        <property name="address1" type="string" />
        <property name="address2" type="string" />
        <property name="address3" type="string" />
        <property name="city" type="string" />
        <property name="zipCode" type="string" />
        <property name="email" type="string" />
        <property name="fkMerchant" type="int" />
    </transfer>

    <transfer name="MerchantCollection">
        <property name="merchants" type="Merchant[]" />
        <property name="pagination" type="Pagination"/>
    </transfer>

    <transfer name="Pagination">
        <property name="page" type="int" />
        <property name="maxPerPage" type="int" />
        <property name="nbResults" type="int" />
        <property name="previousPage" type="int" />
        <property name="nextPage" type="int" />
        <property name="firstIndex" type="int" />
        <property name="lastIndex" type="int" />
        <property name="firstPage" type="int" />
        <property name="lastPage" type="int" />
    </transfer>

    <transfer name="MerchantAddressCollection">
        <property name="addresses" type="MerchantAddress[]" singular="address" />
    </transfer>

</transfers>
