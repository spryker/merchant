<?xml version="1.0"?>
<database xmlns="spryker:schema-01" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed" xsi:schemaLocation="spryker:schema-01 https://static.spryker.com/schema-01.xsd"
          namespace="Orm\Zed\Merchant\Persistence"
          package="src.Orm.Zed.Merchant.Persistence">

    <table name="spy_merchant" phpName="SpyMerchant" identifierQuoting="true">
        <column name="id_merchant" required="true" type="INTEGER" autoIncrement="true" primaryKey="true" />
        <column name="merchant_key" type="VARCHAR" size="255"  description="Identifier for existing entities. It should never be changed."/>
        <column name="name" required="true" size="255" type="VARCHAR"/>

        <behavior name="timestampable"/>

        <column name="registration_number" type="VARCHAR" size="255"/>
        <column name="email" required="true" type="VARCHAR" size="255"/>
        <column name="status" required="true" size="64" type="VARCHAR"/>

        <unique name="spy_merchant-unique-email">
            <unique-column name="email"/>
        </unique>

        <unique name="spy_merchant-merchant_key">
            <unique-column name="merchant_key"/>
        </unique>

        <id-method-parameter value="spy_merchant_pk_seq"/>
    </table>

</database>
